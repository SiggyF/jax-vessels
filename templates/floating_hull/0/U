FoamFile
{
    version     2.0;
    format      ascii;
    class       volVectorField;
    object      U;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 1 -1 0 0 0 0];

internalField   uniform (0 0 0);

boundaryField
{
    inlet
    {
        type            codedFixedValue;
        value           uniform (0 0 0);
        name            inletURampAlpha;
        code
        #{
            const fvPatch& patch = this->patch();
            const scalar t = this->db().time().value();
            
            // Ramp parameters
            const scalar rampTime = 10.0;
            const scalar targetU = 2.0;
            
            // Calculate current ramp velocity
            scalar uMag = 0.0;
            if (t < rampTime)
            {
                uMag = (t / rampTime) * targetU;
            }
            else
            {
                uMag = targetU;
            }
            
            // Get alpha field from the registry
            // Need to lookup the specific patch field for alpha.water
            const volScalarField& alpha = this->db().lookupObject<volScalarField>("alpha.water");
            const fvPatchScalarField& alphaPatch = alpha.boundaryField()[patch.index()];
            
            vectorField& field = *this;
            
            forAll(field, facei)
            {
                // U = ramp * alpha * (1 0 0)
                // Effectively 0 in air, uMag in water
                field[facei] = vector(uMag * alphaPatch[facei], 0, 0);
            }
        #};
    }

    outlet
    {
        type            inletOutlet;
        inletValue      uniform (0 0 0);
        value           uniform (0 0 0);
    }

    bottom
    {
        type            slip;
    }

    top
    {
        type            pressureInletOutletVelocity;
        value           uniform (0 0 0);
    }

    side_left
    {
        type            symmetryPlane;
    }

    side_right
    {
        type            symmetryPlane;
    }

    hull
    {
        type            noSlip;
    }
}

// ************************************************************************* //
