FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      setFieldsDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

defaultFieldValues
(
    volScalarFieldValue alpha.water 0
);

regions
(
    // Base water level
    boxToCell
    {
        box (-100 -150 -100) (400 150 0);
        fieldValues
        (
            volScalarFieldValue alpha.water 1
        );
    }

    // Dam break / Wave initiation block at inlet
    boxToCell
    {
        box (-100 -150 0) (-80 150 10);
        fieldValues
        (
            volScalarFieldValue alpha.water 1
        );
    }
);

