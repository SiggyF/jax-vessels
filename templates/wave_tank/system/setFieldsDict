FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      setFieldsDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

defaultFieldValues
(
    volScalarFieldValue alpha.water 0
);

regions
(
    boxToCell
    {
        box ( -100 -150 -100 ) ( 400 150 0 ); // Base water level z=0
        fieldValues
        (
            volScalarFieldValue alpha.water 1
        );
    }

    // Add a raised block of water at inlet for a dam-break style wave
    boxToCell
    {
        box ( -100 -150 0 ) ( -80 150 5 );    // High water at inlet
        fieldValues
        (
            volScalarFieldValue alpha.water 1
        );
    }
);

// ************************************************************************* //
